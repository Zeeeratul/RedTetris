{
    "compilerOptions": {
      "target": "es5",           
      "module": "commonjs", 
      "lib": ["es6","dom"],    
      "rootDir": "./",
      "outDir": "../../build/server",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots" : ["global.d.ts"],
    },
    "ts-node": {
      "files": true
    },
    "include": [
      "./**/*.ts"
    ],
}