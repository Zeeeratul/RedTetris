{
    "compilerOptions": {
      "target": "es5",           
      "module": "commonjs", 
      "lib": ["es6","dom"],    
      "rootDir": "./src/server",
      "outDir": "build/server",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
    },
    "include": ["src/server/**/*"],
    "exclude": ["node_modules", "src/client/**/*"]
}