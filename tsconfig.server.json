{
    "compilerOptions": {
      "target": "es5",           
      "module": "commonjs", 
      "lib": ["es6","dom"],    
      "rootDir": "./src/server",
      "outDir": "build/server",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
    },
    "ts-node": {
      "files": true
    },
    "files": [
      "src/server/global.d.ts"
    ],
    "include": ["src/server/**/*"],
    "exclude": ["node_modules", "src/client/**/*"]
}